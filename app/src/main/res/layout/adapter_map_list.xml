<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHotel"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Landmark"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <!--Rating-->

                <com.agodademo.helper.CustomRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:srb_borderColor="@color/transparent"
                    app:srb_fillColor="@color/yellow"
                    app:srb_isIndicator="true"
                    app:srb_pressedFillColor="@color/yellow"
                    app:srb_rating="4"
                    app:srb_starBackgroundColor="@color/gray_light"
                    app:srb_starBorderWidth="1"
                    app:srb_starCornerRadius="0"
                    app:srb_starSize="@dimen/_12sdp"
                    app:srb_starsSeparation="@dimen/_4sdp"
                    app:srb_stepSize="1" />

                <!--Since Year-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="(Since 2018)"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <!--Category-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Plywood"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp" />

            <!--Area - District-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Ahmedabad"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
